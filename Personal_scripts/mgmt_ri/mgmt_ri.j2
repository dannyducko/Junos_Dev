system {
    management-instance
}
interfaces {
    {{mgmt_int.int}} {
        unit 0 {
            family inet {
                address {{mgmt_int.ip}};
            }
        }
    }
}
routing-instances {
    {{mgmt_ri.ri_name}} {
        routing-options {
            static {
                route {{mgmt_ri.route}} next-hop {{mgmt_ri.next_hop_add}}
            }
        }
    }
}